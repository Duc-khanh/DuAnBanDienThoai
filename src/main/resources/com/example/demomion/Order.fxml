<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demomion.OrderController" spacing="10" padding="10">
    <Label text="Danh sách đơn hàng" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TableView fx:id="orderTable">
        <columns>
            <TableColumn text="Mã đơn hàng" fx:id="orderIdColumn" />
            <TableColumn text="Tên khách hàng" fx:id="customerNameColumn" />
            <TableColumn text="Ngày đặt hàng" fx:id="orderDateColumn" />
            <TableColumn text="Tổng tiền" fx:id="totalAmountColumn" />
        </columns>
    </TableView>
    <TextField fx:id="searchField" promptText="Tìm kiếm đơn hàng..." />
    <Button text="Tìm kiếm" onAction="#handleSearch" />
</VBox>
